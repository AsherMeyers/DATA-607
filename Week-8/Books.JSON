<!DOCTYPE html>
<html>
<body>

<h2>Three of Asher's Favorite Books</h2>

<p id="Bostonians"></p>

<script>
var Bost= '{"title":"The Bostonians","author":"Henry James","publisher":"MacMillan","pubdate":"1886","type":"Fiction","genre":"Tragicomedy"}';

var BostObj = JSON.parse(Bost);

document.getElementById("Bostonians").innerHTML =
BostObj.title + "<br>" +
BostObj.author + "<br>" +
BostObj.publisher + "<br>" +
BostObj.pubdate + "<br>" +
BostObj.type + "<br>" +
BostObj.genre;
</script>

<p id="Small"></p>

<script>
var Small = '{"title":"Small is Beautiful","author":"E.F. Schumacher","publisher":"Blond & Griggs","pubdate":"1973","type":"Nonfiction","genre":"Economics"}';

var SmallObj = JSON.parse(Small);

document.getElementById("Small").innerHTML =
SmallObj.title + "<br>" +
SmallObj.author + "<br>" +
SmallObj.publisher + "<br>" +
SmallObj.pubdate + "<br>" +
SmallObj.type + "<br>" +
SmallObj.genre;
</script>

<p id="LieWithStats"></p>

<script>
var LieStats = '{"title":"How to Lie with Statistics","author":"Darrel Huff","illustrator":"Irving Geis","publisher":"W.W. Norton","pubdate":"1954","type":"Nonfiction","genre":"Statistics"}';


var LieStatsObj = JSON.parse(LieStats);

document.getElementById("LieWithStats").innerHTML =
LieStatsObj.title + "<br>" +
LieStatsObj.author + ", " + LieStatsObj.illustrator + "<br>" +
LieStatsObj.publisher + "<br>" +
LieStatsObj.pubdate + "<br>" +
LieStatsObj.type + "<br>" +
LieStatsObj.genre;
</script>

</body>
</html>
